# Snapfile for Next Wave App Store Screenshots

# App Identifier
app_identifier("com.federi.Next-Wave")

# Only iPhone 17 Pro
devices([
  "iPhone 17 Pro"
])

# Languages (currently English only)
languages([
  "en-US"
])

# The name of the scheme which contains the UI Tests
scheme("NextWave")

# Where should the resulting screenshots be stored?
output_directory("./Screenshots")

# Clear previous screenshots to avoid confusion
clear_previous_screenshots(true)

# Set the status bar to 9:41 AM with full battery and reception (Apple standard)
override_status_bar(true)

# Reinstall app before taking screenshots
reinstall_app(true)

# Erase simulator to ensure clean state
erase_simulator(true)

# Only test the main app, not widgets
only_testing(["Next WaveUITests"])

# For more information about all available options run
# fastlane action snapshot
